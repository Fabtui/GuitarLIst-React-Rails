<div class="new__session__container">
  <div class="new__session__left">
    <div class="new__session__left__header">
      <h2>GUITAR LIST</h2>
      <p>LIST YOUR GUITAR COLLECTION</p>
    </div>
    <%= image_tag 'strat template' %>
  </div>
  <div class="new__session__center">
  </div>
  <div class="new__session__right">
    <div class="new__session__right__content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <span class='btn btn-onyx' id='log-in-button'>Log in</span>
          <%= f.button :submit, "Log in", class:'d-none', id:'link-button' %>
        </div>
      <% end %>
    </div>
      <%= render "devise/shared/links" %>
  </div>
</div>
